{
    "app-id" : "io.github.gravures.acide",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "42",
    "sdk" : "org.gnome.Sdk",
    "command" : "acide",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--device=dri",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--filesystem=xdg-documents"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	"python3-sphinx.json",
    	"python3-sphinxcontrib.apidoc.json",
    	"python3-myst_parser.json",
    	"python3-furo.json",
        "python3-pymupdf.json",
        "python3-scikit-build.json",
        "python3-blosc.json",
        {
            "name" : "acide",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "."
                }
            ]
        }
    ]
}
